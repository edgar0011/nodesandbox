{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "babel-node -- $NODE_DEBUG_OPTION app/index.js --presets env,stage-2",
    "ejs": "babel-node -- $NODE_DEBUG_OPTION app/index.js --presets env,stage-2"
  },
  "watch": [
    "app"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js ejs"
}
